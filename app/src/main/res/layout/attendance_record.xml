<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="5sp"
    android:paddingLeft="10sp"
    android:paddingRight="10sp"
    android:layout_marginTop="5sp"
    android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/UnitCodeR"
            android:text="BIT 2214 :"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Object Oriented Programming 2"
            android:id="@+id/unitNameRecordR"
            android:layout_toRightOf="@+id/UnitCodeR"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/unitNameRecordR"
            android:text="Sam Athola"
            android:id="@+id/LecturerNameR"
            android:layout_toRightOf="@+id/UnitCodeR"
            android:layout_marginLeft="20dp"
            android:paddingTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/attendanceR"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LecturerNameR"
            android:background="@drawable/attendance_backgorund"
            android:fontFamily="serif"
            android:layout_alignParentRight="true"
            android:text="4/12" />
    </RelativeLayout>


</android.support.v7.widget.CardView>

</LinearLayout>