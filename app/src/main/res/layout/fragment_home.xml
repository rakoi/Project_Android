<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home"
    android:padding="15sp"
    android:background="@color/backgroundgrey"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wednesday 31 January 2019"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="italic"
        android:padding="5sp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:src="@drawable/userprofile"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/classes_background"
        android:layout_weight="1"
        android:columnCount="3"
        >

        <TextView
            android:text="BIT 2214"
            android:id="@+id/UnitCode"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_marginBottom="5dp"
       />

        <TextView
            android:text="Upcoming Session:"
            android:id="@+id/UpcomingSessionLbl"
            android:layout_marginTop="20sp"
            android:layout_column="0"
            android:layout_row="1"


            />
        <TextView
            android:text="Object Oriented Analysis"
            android:id="@+id/Lecture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:gravity="bottom"
            android:layout_column="2"
            android:layout_row="1"

            />
        <TextView
            android:text="Lecturer:"
            android:id="@+id/LecturerLabel"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_marginTop="20sp"

            />
        <TextView
            android:text="Sam Athola"
            android:id="@+id/Lecturer"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_marginTop="20sp"

            />
        <TextView
            android:text="Time:"
            android:id="@+id/TimeLabel"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_marginTop="20sp"

            />
        <TextView
            android:text="8:00 Am"
            android:id="@+id/Time"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_marginTop="20sp"

            />

    </GridLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Check In"
        android:id="@+id/checkIn"
        android:background="@drawable/default_button"
        />

</LinearLayout>